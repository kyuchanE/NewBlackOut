            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:scaleType="fitEnd"/>
    </LinearLayout>

</LinearLayout>